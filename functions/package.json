{
  "name": "truck-maintenance-functions",
  "description": "Cloud Functions for Truck Maintenance Management System - Daily Telegram Notifications",
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node-fetch": "^2.6.11"
  },
  "private": true
}
